rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /tasks/{taskId} {
      allow read: if request.auth != null && request.auth.token.trusted == true;
      allow write: if true;
    }
    match /external/{taskId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.trusted == true;
    }
    match /votes/{taskId} {
      // TODO
    }
    match /merges/{taskId} {
      // TODO
    }
  }
}