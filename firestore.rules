rules_version = '2';

service cloud.firestore {
  match /databases/koryta-pl/documents {
    match /nodes/{nodeId} {
      allow read: if resource.data.type == "article" || resource.data.type == "person" || resource.data.type == "place";
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}