[importlinter]
root_packages =
    analysis
    scrapers
    stores
    util
    entities

include_external_packages = True
exclude_type_checking_imports = True

[importlinter:contract:clean-architecture]
name = Clean architecture
type = layers
layers =
    analysis
    stores
    scrapers
    util
    entities

[importlinter:contract:only-details-can-import-external]
name = Do not import external packages
type = forbidden
source_modules =
    util
    scrapers
    entities
forbidden_modules =
    duckdb
    duckdb.**
    urllib
    urllib.**
    os
    os.**
    sys
    sys.**
    zipfile
    tqdm
    tqdm.**
    google
    google.**
    firebase_admin
    firebase_admin.**
    bs4
    bs4.**

    
