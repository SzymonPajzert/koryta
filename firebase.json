{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm run build"
    ]
  },
  "emulators": {
    "firestore": {
      "port": 8080,
      "database": "koryta-pl"
    },
    "auth": {
      "port": 9099
    },
    "singleProjectMode": true,
    "apphosting": {
      "port": 5002,
      "rootDirectory": "frontend",
      "startCommand": "npm run dev"
    },
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5003
    },
    "ui": {
      "enabled": true
    }
  },
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "database": "koryta-pl"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "apphosting": {
    "backendId": "autopush",
    "rootDir": "frontend",
    "ignore": [
      ".git",
      ".jj",
      ".output",
      "data",
      "database",
      "docs",
      "firebase-debug.*.log",
      "firebase-debug.log",
      "functions",
      "node_modules"
    ],
    "alwaysDeployFromSource": true
  }
}